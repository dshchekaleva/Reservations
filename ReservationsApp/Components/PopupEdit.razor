<dialog @ref="@dialogElement">
    <div id="@Event.Identifier" hidden="@HideEvent()">
        <div hidden="@HideEdit()" class="container_class">
            <InputDate @bind-Value="date"></InputDate>
            <select @bind="@hour" name="hours" id="hours">
                <option value="@Event.Start.Hour">@Event.Start.Hour</option>
                @foreach (var unbookedHour in AvailableHours)
                {
                    <option value="@unbookedHour">@unbookedHour</option>
                }
            </select>
        </div>
        <div class="container_class">
            @Event.Title
        </div>
        <div hidden="@Hide()" class="container_class">
            - @Event.Start.Hour-@Event.End?.Hour
        </div>
        <div hidden="@HideButtons()" class="container_class">
            <button class="btn btn-link" @onclick="() => EditEvent()">Edit</button>
            <button class="btn btn-link" @onclick="() => DeleteEvent()">Delete</button>
        </div>
    </div>
    <div>
        <button class="btn btn-primary" hidden="@HideButtons()" @onclick="SaveAndClosePopupAsync">Save</button>
        <button class="btn btn-danger" @onclick="ClosePopupAsync">Close</button>
    </div>
</dialog>
